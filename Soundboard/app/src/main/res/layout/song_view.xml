<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#CCE3FF"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_song"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_song_1"
            android:layout_marginVertical="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/layout_song_icon"
            android:contentDescription="icon_song_1"
            android:src="@drawable/vec_music_small" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_marginVertical="25dp"
            android:layout_marginRight="25dp"
            android:text="Пластинки.mp3"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/release"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginVertical="25dp"
            android:layout_marginRight="25dp"
            android:text="30/07/2024"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginVertical="25dp"
            android:layout_marginLeft="120dp"
            android:text="3:20"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>